{
    "template": "multiscanner_reports",
    "settings": {
        "index": {
            "mapping.coerce": true,
            "number_of_shards": "5",
            "codec": "best_compression",
            "number_of_replicas": "1"
        },
        "analysis": {
            "analyzer": {
                "ssdeep_analyzer": {"tokenizer": "ssdeep_tokenizer"}
            },
            "tokenizer": {
                "ssdeep_tokenizer": {
                    "type": "ngram",
                    "min_gram": 7,
                    "max_gram": 7
                }
            }
        }
    },
    "mappings": {
        "Cuckoo Sandbox": {
            "date_detection": false,
            "dynamic_templates": [
                {
                    "not_analyzed": {
                        "mapping": {
                            "index": "not_analyzed",
                            "type": "string",
                            "ignore_above": 32766
                        },
                        "match_mapping_type": "string",
                        "match": "*"
                    }
                },
                {
                    "signatures": {
                        "mapping": {
                            "index": "not_analyzed",
                            "type": "string",
                            "ignore_above": 32766
                        },
                        "path_match": "signatures.marks.call.arguments.*",
                        "path_unmatch": "signatures.marks.call.arguments.registers.*",
                        "match": "*",
                        "match_mapping_type": "long"
                    }
                }
            ],
            "properties": {
                "report_time": {
                    "format": "epoch_second",
                    "type": "date"
                },
                "procmemory": {
                    "type": "nested",
                    "include_in_root": "True",
                    "properties": {
                        "regions": {
                           "include_in_root": "True",
                           "type": "nested"
                        }
                    }
                }
            }
        },
        "call": {
            "date_detection": false,
            "dynamic_templates": [
                {
                    "not_analyzed": {
                        "mapping": {
                            "index": "not_analyzed",
                            "type": "string",
                            "ignore_above": 32766
                        },
                        "match_mapping_type": "string",
                        "match": "*"
                    }
                },
                {
                    "call_arguments": {
                        "mapping": {
                            "index": "not_analyzed",
                            "type": "string",
                            "ignore_above": 32766
                        },
                        "path_match": "arguments.*",
                        "match": "*",
                        "match_mapping_type": "long"
                    }
                }
            ],
            "properties": {
                "report_time": {
                    "format": "epoch_second",
                    "type": "date"
                }
            }
        },
        "sample": {
            "properties": {
                "filename": {"type": "text"},
                "ssdeep": {
                    "properties": {
                        "chunksize": {"type": "integer"},
                        "chunk": {
                            "analyzer": "ssdeep_analyzer",
                            "type": "text"
                        },
                        "double_chunk": {
                            "analyzer": "ssdeep_analyzer",
                            "type": "text"
                        },
                        "ssdeep_hash": {"type": "keyword"}
                    }
                }
            }
        },
        "report": {
            "_parent": {"type": "sample"}
        },
        "note": {
            "_parent": {"type": "sample"},
            "properties": {
                "timestamp": {"type": "date"}
            }
        }
    }
}
