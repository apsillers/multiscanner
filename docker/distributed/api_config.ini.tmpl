[api]
host = 0.0.0.0
port = {{ getenv "MS_API_PORT" "8080"}}
upload_folder = /tmp/
distributed = {{ getenv "MS_API_DISTRIBUTED" "True"}}
web_loc = http://msweb:80/
cors = {{ getenv "MS_API_CORS_REGEX" "https?://localhost"}}(:\d+)?
batch_size = {{ getenv "MS_API_BATCH_SIZE" "100" }}
batch_interval = {{ getenv "MS_API_BATCH_INTERVAL" "2" }}

[celery]
protocol = pyamqp
host = {{ getenv "MS_CELERY_HOST" "task_broker" }}
user = {{ getenv "MS_CELERY_USER" "ms_rabbit" }}
password = {{ getenv "MS_CELERY_PASSWORD" "CHANGE_THIS_PASSWORD" }}
vhost = /
flush_every = {{ getenv "MS_CELERY_FLUSH_EVERY" "100" }}
flush_interval = {{ getenv "MS_CELERY_FLUSH_INTERVAL" "10" }}

[Database]
db_type = sqlite
host_string = localhost
db_name = task_db
username = multiscanner
password = CHANGEME

